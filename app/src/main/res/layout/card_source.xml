<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:id="@+id/bulletin_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bulletin_profilepicture"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/bulletin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/big_padding"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/bulletin_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/bulletin_profilepicture"
            android:paddingLeft="@dimen/medium_padding"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/bulletin_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.08"
        android:maxLength="200"
        android:paddingBottom="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding"
        android:textColor="@color/text_normal"
        android:textSize="15sp" />

</LinearLayout>