<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/bulletin_like"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/social_unselected"
        android:src="@drawable/ic_thumb_up_grey600_18dp" />

    <ImageButton
        android:id="@+id/bulletin_share"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/social_unselected"
        android:src="@drawable/ic_share_variant_grey600_18dp" />

    <ImageButton
        android:id="@+id/bulletin_comment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/bulletin_share"
        android:background="@drawable/social_unselected"
        android:src="@drawable/ic_comment_text_grey600_18dp" />

</RelativeLayout>
