<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme for the entire app -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Base theme for all detail activities -->
    <style name="BaseDetailTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:editTextColor">@color/text_normal</item>
    </style>

    <!-- Application theme (MainActivity) -->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:windowBackground">@color/home_gray_background</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Introduction theme-->
    <style name="IntroTheme" parent="BaseAppTheme">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:windowBackground">@color/home_gray_background</item>
    </style>

    <!-- New post activity theme -->
    <style name="NewPostTheme" parent="BaseDetailTheme">
        <item name="android:windowBackground">@color/s</item>
    </style>

    <!-- Post detail activity theme -->
    <style name="DetailPostTheme" parent="BaseDetailTheme">
        <item name="android:windowBackground">@color/s</item>
    </style>

    <!-- Assignment detail activity theme-->
    <style name="DetailAssignmentTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Event detail theme -->
    <style name="DetailEventTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/home_gray_background</item>
    </style>

    <!-- Image detail theme (does not extend base themes) -->
    <style name="DetailImageTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- MainActivity drawer icon color -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- Text editing "bar" theme-->
    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/primary</item>
        <item name="titleTextStyle">@style/ActionModeTitleStyle</item>
    </style>

    <style name="ActionModeTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>
